<div id="archives">
    <% let posts = []; %>
    <span style="
        display: block;
        width: 100%;
        text-align: center;
    ">
        <h2>Links</h2>
        <% for (let friend of theme.friends) { %>
        <a href="<%= friend.url %>" style="
                display: inline-flex;
                align-items: center;
                box-sizing: border-box;
                width: 40%;
                margin: 15px;
                padding: 20px;
                color: #1e3e3f;
                background: #fff;
                border: 1px solid #0002;
                border-radius: 10px;
                text-decoration: none; /* 去掉链接下划线 */
            ">
            <div style="
                    flex: 0 0 auto;
                    margin-right: 20px;
                ">
                <img src="<%= friend.avatar %>" style="
                        width: 100px;
                        height: 100px;
                        border-radius: 50%;
                    ">
            </div>
            <div style="
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                ">
                <span style="
                    font-size: 20px;
                    font-weight: bold;
                    text-align: left;
                "><%= friend.name %></span>
                <span style="
                    font-size: 15px;
                    text-align: left;
                "><%= friend.description %></span>
            </div>
        </a>
        <% } %>
    </span>
</div>